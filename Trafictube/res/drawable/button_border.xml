<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
	   <shape android:drawable="@color/galbenDeschis" android:shape="rectangle" android:layout_width="wrap_content">
	       <stroke android:width="1dp" android:color="@color/galbenInchis" />
	       <solid android:color="@color/galbenDeschis" />
	       <corners android:radius="5dp" />
	   </shape>
	</item>
	
    <item android:state_focused="true">
	   <shape android:drawable="@color/galbenDeschis" android:shape="rectangle" android:layout_width="wrap_content">
	       <stroke android:width="1dp" android:color="@color/galbenInchis" />
	       <solid android:color="@color/galbenDeschis" />
	       <corners android:radius="5dp" />
	   </shape>
	</item>
    
    <item>
	   <shape android:drawable="@color/galben" android:shape="rectangle" android:layout_width="wrap_content">
	       <stroke android:width="1dp" android:color="@color/galbenInchis" />
	       <solid android:color="@color/galben" />
	       <corners android:radius="5dp" />
	   </shape>
	</item>
	
</selector>

